 //Query Operators
 db.swiftdata.find({
	_id : {
			$gt: 4200,
			$gte: 4205,
			$eq: 4205,
			$ne: 4203,
			$lte: 4205,
			$in: [4,5,10],
			}
 })
 
/#Logical#/
//OR
db.swiftdata.find({
	$or : [{
		_id: {
			$lte : 5,
			$ne:	2
		},
	},{_id: {$eq : 4000}}]
})  

//$or and $and

db.swiftdata.find({
	$or:[
			{_id: {$lte : 5}},
			{_id: {$in: [1000,2000,3000,4000]}}
			
		],
	$and: [
		{_id : {$ne: 2}}
	]
})

//Inser One
db.data.insertOne({name : 'Chetan',age:20})

//Insert Many
db.data.insertMany([
{
	name	:	'Ashwini',
	age		:	22,
	gender	:	'female'
},
{
	name	:	'Bharat',
	age		:	25,
	gender	:	'male'
}
])


//delete one
 db.data.deleteOne({name:'Ashwini'})

//Delete Many 
db.data.deleteMany({$or:[{age:25},{age:20}]})

//Update One
db.data.updateOne({age:25},{$set:{age:22}})

//update Many
db.data.updateMany({age:22},{$set:{skill:'MongoDB'}})


//Where Condition for Array under Array
db.data.find({'edu.cource':'MCA'})

//Aggregation Pipelines

//#simple where
db.data.aggregate({$match :{gender:'female'}})

//group by
db.data.aggregate({$group:{_id:'$age',count:{$sum:1}}})

//order by count desc and limit 1
db.data.aggregate(
[
	{
		$group	:	{
						_id		:	'$age',
						count	:	{	$sum	:	1	}
					}
	},
	{
		$sort:		{	count	:	-1	}
	},
	{
		$limit : 5
	},
	{
		$skip : 0
	},
	{
		$project: {
			age: '$_id',
			_id : 0,
			count: 1
		}
	}
]
)